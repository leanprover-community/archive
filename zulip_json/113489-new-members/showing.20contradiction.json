> <span class=\"n\">h3</span>\n<span class=\"n\">use</span> <span class=\"n\">k</span>\n<span class=\"n\">apply</span> <span class=\"n\">And</span><span class=\"o\">.</span><span class=\"n\">intro</span>\n<span class=\"n\">exact</span> <span class=\"n\">h1</span>\n<span class=\"n\">exact</span> <span class=\"n\">h2</span>\n\n<span class=\"n\">variable</span> <span class=\"p\">(</span><span class=\"n\">d</span><span class=\"p\">:</span> <span class=\"n\">ℤ</span><span class=\"p\">)</span>\n<span class=\"n\">theorem</span> <span class=\"n\">fermat_for_4</span><span class=\"p\">(</span><span class=\"n\">a</span> <span class=\"n\">b</span> <span class=\"n\">c</span> <span class=\"p\">:</span> <span class=\"n\">ℤ</span><span class=\"p\">):</span>\n<span class=\"n\">a</span><span class=\"o\">*</span><span class=\"n\">b</span><span class=\"o\">*</span><span class=\"n\">c</span> <span class=\"err\">≠</span> <span class=\"mi\">0</span> <span class=\"err\">→</span> <span class=\"n\">a</span><span class=\"o\">^</span><span class=\"mi\">4</span><span class=\"o\">+</span><span class=\"n\">b</span><span class=\"o\">^</span><span class=\"mi\">4</span><span class=\"err\">≠</span> <span class=\"n\">c</span><span class=\"o\">^</span><span class=\"mi\">4</span><span class=\"o\">:=</span> <span class=\"n\">by</span>\n<span class=\"n\">intro</span> <span class=\"n\">h</span>\n<span class=\"n\">apply</span> <span class=\"n\">reduce_c_exponent_2</span> <span class=\"n\">at</span> <span class=\"n\">h</span>\n<span class=\"n\">have</span> <span class=\"n\">h1</span><span class=\"p\">:</span> <span class=\"n\">a</span><span class=\"o\">^</span><span class=\"mi\">4</span> <span class=\"o\">+</span> <span class=\"n\">b</span><span class=\"o\">^</span><span class=\"mi\">4</span> <span class=\"o\">=</span> <span class=\"n\">c</span><span class=\"o\">^</span><span class=\"mi\">4</span>\n<span class=\"n\">sorry</span>\n<span class=\"o\">--------------------------------------</span>\n<span class=\"